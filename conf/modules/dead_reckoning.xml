<!DOCTYPE module SYSTEM "module.dtd">

<module name="dead_reckoning">
  <doc>
    <description>Estimate quadrotor position from IMU data.</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="dead_reckoning">
        <dl_setting shortname="bias_phi" var="dr_bias[0]" min="-0.1" step="0.01" max="0.1"/>
        <dl_setting shortname="bias_theta" var="dr_bias[1]" min="-0.1" step="0.01" max="0.1"/>
        <dl_setting shortname="bias_ax" var="dr_bias[2]" min="-5" step="0.1" max="5"/>
        <dl_setting shortname="bias_ay" var="dr_bias[3]" min="-5" step="0.1" max="5"/>
        <dl_setting shortname="calibrate" var="dr_calibrate" min="0" step="1" max="1"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="dead_reckoning.h"/>
  </header>
  <init fun="dr_init()"/>
  <periodic fun="dr_periodic()" freq="50" autorun="TRUE"/>
  <makefile>
    <file name="dead_reckoning.c"/>
  </makefile>
</module>

