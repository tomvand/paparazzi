<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.0" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Visual homing test" security_height="0.3">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="0.0" y="0.0"/>
    
    <waypoint name="GRID0" lat="51.9906059" lon="4.3767837"/>
    <waypoint name="GRIDX" lat="51.9906245" lon="4.3768353"/>
    <waypoint name="GRIDY" lat="51.9906366" lon="4.3767513"/>
    <waypoint name="START" x="0" y="0"/>
    <waypoint name="GOAL" x="0" y="0"/>
    
    <waypoint lat="51.9906213" lon="4.3768628" name="FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="FA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavSetWaypointHere(WP_HOME)"/>
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="NAV Stay at STDBY"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call_once fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="NAV Stay at STDBY">
      <call_once fun="SetAPMode(AP_MODE_NAV)"/>
      <stay wp="STDBY"/>
    </block>
    
    <block name="NAV Prepare center run">
      <call_once fun="SetAPMode(AP_MODE_NAV)"/>
      <call_once fun="NavSetupGrid(WP_GRID0,WP_GRIDX,WP_GRIDY,5,5)"/>
      <call_once fun="NavGridPos(WP_GOAL,0.5,0.5)"/>
      <stay wp="GOAL"/>
    </block>
    <block name="MODULE Center run">
      <call_once fun="VisualHomingSetSnapshotMode()"/>
      <call_once fun="VisualHomingRecordSingle()"/>
      
      <while cond="!NavGridComplete()">
        <call_once fun="SetAPMode(AP_MODE_NAV)"/>
        <call_once fun="NavGridNext(WP_START)"/>
        <go wp="START"/>
        <call_once fun="SetAPMode(AP_MODE_MODULE)"/>
        <stay wp="GOAL" until="VisualHomingCompleted() || stage_time > 20.0"/>
      </while>

      <deroute block="NAV Prepare center run"/>
    </block>
    
  </blocks>
</flight_plan>