<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.0" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Odometry test in optitrack" security_height="0.3">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="0.0"/>
    <waypoint name="GOAL" x="-1.5" y="-2"/>
    <waypoint name="STDBY" x="1.5" y="2"/>
    <waypoint lat="51.9906213" lon="4.3768628" name="FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="FA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavSetWaypointHere(WP_HOME)"/>
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="NAV Stay at goal"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="NAV Stay at goal">
      <call_once fun="SetAPMode(AP_MODE_NAV)"/>
      <stay wp="GOAL"/>
    </block>
    <block name="MODULE Hover zero velocity">
      <call_once fun="VisualHomingStop()"/>
      <call_once fun="SetAPMode(AP_MODE_MODULE)"/>
      <while cond="TRUE"/>
    </block>
    <block name="GUIDED Hover zero position">
      <call_once fun="VisualHomingSetOdometryMode()"/>
      <call_once fun="VisualHomingRecordSingle()"/>
      <call_once fun="SetAPMode(AP_MODE_GUIDED)"/>
      <while cond="TRUE"/>
    </block>
    <block name="MODULE Hover zero position">
      <call_once fun="VisualHomingSetOdometryMode()"/>
      <call_once fun="VisualHomingRecordSingle()"/>
      <call_once fun="SetAPMode(AP_MODE_MODULE)"/>
      <while cond="TRUE"/>
    </block>
    <block name="GUIDED Trajectory">
      <call_once fun="VisualHomingSetOdometryMode()"/>
      <call_once fun="VisualHomingRecordSingle()"/>
      <go wp="STDBY" from="GOAL" hmode="route"/>
      <stay wp="STDBY" until="stage_time>2.0"/>
      <call_once fun="SetAPMode(AP_MODE_GUIDED)"/>
      <while cond="TRUE"/>
    </block>
    <block name="MODULE Trajectory">
      <call_once fun="VisualHomingSetOdometryMode()"/>
      <call_once fun="VisualHomingRecordSingle()"/>
      <go wp="STDBY" from="GOAL" hmode="route"/>
      <stay wp="STDBY" until="stage_time>2.0"/>
      <call_once fun="SetAPMode(AP_MODE_MODULE)"/>
      <while cond="TRUE"/>
    </block>
  </blocks>
</flight_plan>