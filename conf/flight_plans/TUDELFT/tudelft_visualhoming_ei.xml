<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.0" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="200" name="Rotorcraft Optitrack (Delft)" security_height="0.3">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6"/>
    <waypoint name="GOAL" x="2.0" y="2.0"/>
    <waypoint name="EI1" x="1.3" y="0.6"/>
    <waypoint name="EI2" x="3.5" y="0.8"/>
    <waypoint name="EI3" x="6.2" y="0.95"/>
    <waypoint name="EI4" x="9.7" y="0.7"/>
    <waypoint name="EI5" x="14.3" y="-0.2"/>
    <waypoint name="EI6" x="16.9" y="-1.8"/>
    <waypoint name="EI7" x="17.8" y="-4.4"/>
    <waypoint name="EI8" x="18.0" y="-6.9"/>
    <waypoint name="EI9" x="17.8" y="-10.2"/>
    <waypoint name="EI10" x="15.9" y="-14.0"/>
    <waypoint name="EI11" x="12.6" y="-15.2"/>
    <waypoint name="EI12" x="9.0" y="-15.6"/>
    <waypoint name="EI13" x="3.6" y="-15.5"/>
    <waypoint name="EI14" x="0" y="-14.4"/>
    <waypoint name="EI15" x="-2.3" y="-11.4"/>
    <waypoint name="EI16" x="-2.8" y="-8.5"/>
    <waypoint name="EI17" x="-2.8" y="-5.9"/>
    <waypoint name="EI18" x="-1.9" y="-2.6"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavSetWaypointHere(WP_GOAL)"/>
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="Stay at goal"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Stay at goal">
      <stay wp="GOAL"/>
    </block>
    <block name="Record trajectory">
      <call_once fun="VisualHomingTakeSnapshot()"/>
      <path wpts="EI1,EI2,EI3,EI4,EI5,EI6,EI7,EI8,EI9,EI10,EI11,EI12,EI13,EI14,EI15,EI16,EI17,EI18,GOAL" approaching_time="0"/>
      <stay wp="GOAL"/>
    </block>
    <block name="[MODULE] Follow route">
      <call_once fun="NavToModule()"/>
      <while cond="!VisualHomingCompleted()"/>
    </block>
    <block name="[NAV] Return to goal">
      <call_once fun="ModuleToNav()"/>
      <deroute block="Stay at goal"/>
    </block>
  </blocks>
</flight_plan>
