<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Visual homing: grid measurement (Delft)" security_height="0.3">
  <header>
#include "autopilot.h"
#include "modules/visualhoming/visualhoming.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="0.0"/>
    <waypoint name="GOAL" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="0.0" y="0.0"/>
    <waypoint name="TD" x="0.0" y="0.0"/>
    <waypoint name="SURVEY" x="-2.0" y="-2.0"/>
    <waypoint name="MANUAL" x="5" y="5"/>
    <waypoint lat="51.9906213" lon="4.3768628" name="FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="FA4"/>
<waypoint name="G_0" x="-2.0" y="-2.0"/>
<waypoint name="G_1" x="-2.0" y="-1.0"/>
<waypoint name="G_2" x="-2.0" y="0.0"/>
<waypoint name="G_3" x="-2.0" y="1.0"/>
<waypoint name="G_4" x="-2.0" y="2.0"/>
<waypoint name="G_5" x="-1.0" y="2.0"/>
<waypoint name="G_6" x="-1.0" y="1.0"/>
<waypoint name="G_7" x="-1.0" y="0.0"/>
<waypoint name="G_8" x="-1.0" y="-1.0"/>
<waypoint name="G_9" x="-1.0" y="-2.0"/>
<waypoint name="G_10" x="0.0" y="-2.0"/>
<waypoint name="G_11" x="0.0" y="-1.0"/>
<waypoint name="G_12" x="0.0" y="0.0"/>
<waypoint name="G_13" x="0.0" y="1.0"/>
<waypoint name="G_14" x="0.0" y="2.0"/>
<waypoint name="G_15" x="1.0" y="2.0"/>
<waypoint name="G_16" x="1.0" y="1.0"/>
<waypoint name="G_17" x="1.0" y="0.0"/>
<waypoint name="G_18" x="1.0" y="-1.0"/>
<waypoint name="G_19" x="1.0" y="-2.0"/>
<waypoint name="G_20" x="2.0" y="-2.0"/>
<waypoint name="G_21" x="2.0" y="-1.0"/>
<waypoint name="G_22" x="2.0" y="0.0"/>
<waypoint name="G_23" x="2.0" y="1.0"/>
<waypoint name="G_24" x="2.0" y="2.0"/>
<waypoint name="G_CENTER" x="0.0" y="0.0"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="Manual">
      <stay wp="MANUAL"/>
    </block>
    <block name="START" strip_button="Go" strip_icon="lookfore.png">
      <stay wp="G_CENTER" until="block_time>10"/>
    </block>
    <block name="Take snapshot">
      <call fun="nav_set_heading_deg(0)"/>
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <!-- <set var="take_snapshot" value="1"/> -->
    </block>
    <block name="Survey">
<stay wp="G_0" until="stage_time>5"/>
<stay wp="G_1" until="stage_time>5"/>
<stay wp="G_2" until="stage_time>5"/>
<stay wp="G_3" until="stage_time>5"/>
<stay wp="G_4" until="stage_time>5"/>
<stay wp="G_5" until="stage_time>5"/>
<stay wp="G_6" until="stage_time>5"/>
<stay wp="G_7" until="stage_time>5"/>
<stay wp="G_8" until="stage_time>5"/>
<stay wp="G_9" until="stage_time>5"/>
<stay wp="G_10" until="stage_time>5"/>
<stay wp="G_11" until="stage_time>5"/>
<stay wp="G_12" until="stage_time>5"/>
<stay wp="G_13" until="stage_time>5"/>
<stay wp="G_14" until="stage_time>5"/>
<stay wp="G_15" until="stage_time>5"/>
<stay wp="G_16" until="stage_time>5"/>
<stay wp="G_17" until="stage_time>5"/>
<stay wp="G_18" until="stage_time>5"/>
<stay wp="G_19" until="stage_time>5"/>
<stay wp="G_20" until="stage_time>5"/>
<stay wp="G_21" until="stage_time>5"/>
<stay wp="G_22" until="stage_time>5"/>
<stay wp="G_23" until="stage_time>5"/>
<stay wp="G_24" until="stage_time>5"/>
      <deroute block="Standby"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png" key="l">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
